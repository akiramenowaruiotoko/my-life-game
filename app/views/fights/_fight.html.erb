<% if user_signed_in? %>
  <%= target.fights.count %>
  <% if current_user.fights.find_by(target_id: target.id) %>
    <%= link_to target_fight_path(target, target), method: :delete, remote: true, class:"fight" do %>
      <span>ガンバ！</span><i class="fas fa-heart"></i>
    <% end %>
  <% else %>
    <%= link_to target_fights_path(target), method: :post, remote: true, class:"fight" do %>
      <span>ガンバ！</span><i class="far fa-heart"></i>
    <% end %>
  <% end %>
<% end %>